<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        android:paddingStart="35dp"
        android:paddingEnd="35dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSave"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
              >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/horizontal_ruler_shadow" />

            </LinearLayout>

            <TextView
                android:id="@+id/titleProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession|University|Company"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/hr"
                android:textColor="#273842"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/subtitleProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession"
                android:layout_marginTop="8dp"
                android:layout_below="@id/titleProfession"
                android:textColor="#273842"
                />

            <EditText
                android:id="@+id/editTextProfession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter profession to filter"
                android:layout_below="@id/subtitleProfession"
                android:layout_marginTop="6dp"
                android:textColorHint="#273842"
                android:padding="10dp"
                android:background="@drawable/frame_background"/>

            <TextView
                android:id="@+id/subtitleUniversity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University Name"
                android:layout_marginTop="10dp"
                android:textColor="#273842"
                android:layout_below="@id/editTextProfession"
                />

            <EditText
                android:id="@+id/editTextUniversity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColorHint="#273842"
                android:hint="Enter University name to filter"
                android:layout_below="@id/subtitleUniversity"
                android:padding="10dp"
                android:background="@drawable/frame_background"/>

            <TextView
                android:id="@+id/subtitleCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:layout_marginTop="10dp"
                android:textColor="#273842"
                android:layout_below="@id/editTextUniversity"
                />

            <EditText
                android:id="@+id/editTextCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter company name"
                android:textColorHint="#273842"
                android:layout_marginTop="6dp"
                android:layout_below="@id/subtitleCompany"
                android:padding="10dp"
                android:background="@drawable/frame_background"/>

            <LinearLayout
                android:id="@+id/hr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/editTextCompany">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/horizontal_ruler_shadow" />

            </LinearLayout>

            <TextView
                android:id="@+id/titleLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:textColor="#273842"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/hr1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/homeTown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hometown"
                android:layout_marginTop="10dp"
                android:textColor="#273842"
                android:layout_below="@+id/titleLocation"
                />

            <EditText
                android:id="@+id/edHomeTown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter city to filter"
                android:layout_below="@+id/homeTown"
                android:textColorHint="#273842"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/frame_background"/>

            <TextView
                android:id="@+id/livesIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hometown"
                android:textColor="#273842"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/edHomeTown"
                />

            <EditText
                android:id="@+id/edlivesIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#273842"
                android:hint="Enter city to filter"
                android:layout_below="@+id/livesIn"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/frame_background"/>

            <LinearLayout
                android:id="@+id/hr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edlivesIn">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/horizontal_ruler_shadow" />

            </LinearLayout>

            <TextView
                android:id="@+id/titlePreference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preference"
                android:textColor="#273842"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/hr2"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#273842"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/titlePreference"
                />

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/flowLayoutOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/Hobbies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbies"
                android:textColor="#273842"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/flowLayoutOption"
                />

            <EditText
                android:id="@+id/edHobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter hobbies to filter"
                android:layout_below="@+id/Hobbies"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:textColorHint="#273842"
                android:background="@drawable/frame_background"/>

            <TextView
                android:id="@+id/Movies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movies"
                android:textColor="#273842"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/edHobbies"
                />

            <EditText
                android:id="@+id/edMovies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter movies to filter"
                android:layout_below="@+id/Movies"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:textColorHint="#273842"
                android:background="@drawable/frame_background"/>

            <TextView
                android:id="@+id/Food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:layout_marginTop="10dp"
                android:textColor="#273842"
                android:layout_below="@+id/edMovies"
                />

            <EditText
                android:id="@+id/edFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter food to filter"
                android:layout_below="@+id/Food"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:textColorHint="#273842"
                android:background="@drawable/frame_background"/>

            <TextView
                android:id="@+id/Sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textColor="#273842"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/edFood"
                />

            <EditText
                android:id="@+id/edSports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter sports to filter"
                android:layout_below="@+id/Sports"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:textColorHint="#273842"
                android:background="@drawable/frame_background"/>

            <LinearLayout
                android:id="@+id/hr3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edSports">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/horizontal_ruler_shadow" />

            </LinearLayout>

            <TextView
                android:id="@+id/titleProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Completion Score"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/hr3"
                android:textColor="#273842"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/selectedRangeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hr3"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/seekbar_background"
                android:padding="5dp"
                android:text="0 - 100"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/titleProfile"
                android:valueFrom="0"
                android:valueTo="100"
                app:values="@array/default_range"
                />


            <LinearLayout
                android:id="@+id/hr4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/seekBar">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/horizontal_ruler_shadow" />

            </LinearLayout>

            <TextView
                android:id="@+id/titlePurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/hr4"
                android:textColor="#273842"
                android:textStyle="bold"
                />

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/flowLayoutOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titlePurpose"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/frame_background"
        android:text="Apply"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


